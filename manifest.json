{
    "manifest_version": 2,
    "name": "Turtles 3 App",
    "author": "Voyage 2 Turtles 3",
    "version": "0.0.1",
    "content_security_policy":"script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com https://use.fontawesome.com/3cc79e2fae.js  https://www.googleapis.com; object-src 'self'",
  "description": "Turtles Dashboard",
    "content_scripts": [
    {
      "matches": ["http://www.google.com/*", "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"],
      "css": ["/css/style.css"],
      "js": ["js/firebase.js","/js/main.js","/js/skycons.js"]
    }
  ],
	"browser_action": [{
		"default_icon": "img/favicon.png"
	}],
	
    "background": {
        "scripts": [ "js/background.js" ]
    },
	
	"permissions": [
		"tabs",
		"geolocation",
		"activeTab",
		 "identity"
	],
	
	"chrome_url_overrides": {
		"newtab": "/newtab.html"
	}	
}